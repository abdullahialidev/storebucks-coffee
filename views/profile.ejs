<%- include('partials/header') -%>
  <section class="mainContain">
    <section class="mainSection">
      <div>
        <div class="whereOrder">
          <h1> Orders to be Fulfilled</h1>
          <p>Once order is fulfilled, click the button!</p>
        </div>
        
        <% if(pendingOrder.length == 0) {%>
          <p class="whereOrder">There currently are no pending orders!</p>
        <%} %>
    
        <ul>
        <% for (let i = 0; i < pendingOrder.length; i++) {%>
          <div class="OrderPending">
            <li>
              <span>Name: <%= pendingOrder[i].customerName%></span>
              <p>Order: <%= pendingOrder[i].size%> <%= pendingOrder[i].order%></p>
              <form
                class="col-1"
                action="/post/fulfillOrder/<%= pendingOrder[i].id %>?_method=PUT"
                method="POST"
                >
                <button class="buttonone" type="submit"></button>
              </form>
            </li>
          </div>
        <%}%>
        </ul>
    
    
    
      </div>
    </section>
    
    
    <section class="mainSection">
      <div >
        <div class="whereOrder">
          <h1>Order is fulfilled and ready for pick up!</h1>
          <p>Delete order after pickup!</p>
    
        </div>
        <ul>
        <% for (let i = 0; i < completedOrder.length; i++) {%>
          <div class="OrderComplete">
            <li>
              <span><%= completedOrder[i].assignedBarista%> completed: <%= completedOrder[i].customerName%>'s order</span>
              <p>Order: <%= completedOrder[i].size%> <%= completedOrder[i].order%></p>
              <form
              action="/post/deleteOrder/<%= completedOrder[i].id %>?_method=DELETE" 
              method="POST"
              class="col-3"
            >
              <button class="buttonone" type="submit"></button>
            </form>
              
            </li>
          </div>
        <%}%>
        </ul>
      </div>
      <a href="/logout" class="col-3 btn btn-primary">Logout</a>
    </section>
  </section>
        
             
<%- include('partials/footer') -%>